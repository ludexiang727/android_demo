<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/travel_item_delete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ub_travel_edit_left"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_alignBaseline="@+id/travel_item_parent"
        android:clickable="true"
        android:scaleType="fitXY"/>

    <RelativeLayout
        android:id="@+id/travel_item_parent_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/ub_travel_item_bg">

        <TextView
            android:id="@+id/travel_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08月06日 7:48"
            android:textSize="14sp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/travel_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginTop="15dp"
            android:textColor="#b2b2ba"
            android:text="优选轿车"
            android:layout_toRightOf="@id/travel_time"
            android:background="@drawable/ub_travel_type"/>

        <TextView
            android:id="@+id/travel_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:text="已完成"
            android:textSize="12sp"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/travel_start_address"
            android:layout_below="@id/travel_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="海淀区文慧园16号"
            android:textColor="#ac000000"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ub_travel_start_adr_point"
            android:layout_alignLeft="@id/travel_time"/>

        <TextView
            android:id="@+id/travel_end_address"
            android:layout_below="@id/travel_start_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="上地东路数字山谷二区"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:textColor="#ac000000"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ub_travel_end_adr_point"
            android:layout_alignLeft="@id/travel_time" />

    </RelativeLayout>
</merge>