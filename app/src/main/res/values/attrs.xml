<?xml version="1.0" encoding="utf-8" ?>
<resources>
    <declare-styleable name="BrokenLineView">
        <attr name="broken_line_color" format="color"/>
    </declare-styleable>


    <declare-styleable name="WaitForResponseProgress">
        <attr name="progress_color_schema" format="reference"/>
        <attr name="progress_oneshot" format="boolean"/>
        <attr name="progress_height" format="dimension"/>
        <attr name="progress_top" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="BoldTextView">
        <attr name="b_color" format="color"/>
        <attr name="b_size" format="dimension"/>
        <attr name="b_bold" format="boolean"/>
        <attr name="n_color" format="color"/>
        <attr name="n_size" format="dimension"/>
        <attr name="n_bold" format="boolean"/>
        <attr name="n_padding_top" format="dimension"/>
        <attr name="b_bold_x" format="dimension"/>
        <attr name="b_bold_y" format="dimension"/>
        <attr name="hor_center" format="boolean"/>
        <attr name="b_x_scale" format="float"/>
        <attr name="n_x_scale" format="float"/>
        <attr name="draw_rect" format="boolean"/>
        <attr name="is_anim" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="SlideView">
        <attr name="isSlide" format="boolean"/>
        <attr name="fillColor" format="color"/>
        <attr name="radius" format="dimension"/>
        <attr name="style" format="enum">
            <enum name="fill" value="0"/>
            <enum name="stoke" value="1"/>
        </attr>
        <attr name="stroke_width" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ScriptTextView">
        <attr name="script_color" format="color"/>
        <attr name="script_text" format="string"/>
        <attr name="script_direction" format="enum">
            <enum name="right" value="0"/>
            <enum name="left" value="1"/>
        </attr>
        <attr name="script_loc" format="enum">
            <enum name="top" value="0"/>
            <enum name="mid" value="1"/>
            <enum name="bottom" value="2"/>
        </attr>
    </declare-styleable>
</resources>