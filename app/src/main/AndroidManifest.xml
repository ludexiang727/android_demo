<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="demo.com.testdemo">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.StatisticsActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".activity.MaskGuideActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".activity.UberLoginActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".activity.UberWaitForActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".widget.uber.mytravel.MyTravelActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".activity.GuessUGoActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".activity.PopupActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".activity.CircleProActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".activity.IocViewActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".lockscreen.LockScreenActivity"
            android:excludeFromRecents="true"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:screenOrientation="portrait"/>

    </application>

</manifest>